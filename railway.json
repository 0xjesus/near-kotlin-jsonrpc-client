{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bash scripts/fix_near_types.sh && ./gradlew :demo-app:shadowJar"
  },
  "deploy": {
    "startCommand": "java -Xmx512m -jar demo-app/build/libs/near-demo.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
